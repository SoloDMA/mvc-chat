@model UserModel



    <div id="user-panel">
        <img id="user-avatar" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))" />
        <div id="user-info">
            <span id="user-name">@Model.UserName</span>
            @await Component.InvokeAsync("UserActivity")
        </div>
    </div>
